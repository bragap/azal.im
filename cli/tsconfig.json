{
  "compilerOptions": {
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "ES2017",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "../",
    "paths": {
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src/**/*.ts", "../lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "../node_modules"]
}
